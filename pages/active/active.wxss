.active{
  margin: 10px;
  
  /* width: 100%; */
}
.clearfix::after{
  content: '';
  display: block;
  clear: both;
}
.auto-img{
  width: 100%;
  display: block;
}
.active .active_left{
  background-color: #fff;
  float: left;
  width: calc(50% - 5px);
}
.active .active_right{
  background-color: #fff;
  float: right;
  width: calc(50% - 5px);
}
.name{
  font-size: 16px;
  margin:5px; 
}
.price{
  font-size: 14px
} 
.price .newPrice{
  float: left;
  color: #AD6969;
  
} 
.price .oldPrice{
  float: right;
  color: #AFAFAF;
  text-decoration: line-through;
}
