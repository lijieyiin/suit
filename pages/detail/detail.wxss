/* pages/detail/detail.wxss */

.detail {
  background-color: #fff;
}

.swiper_image {
  width: 100%;
  display: block;
}

fl {
  float: left;
}

.clearfix::after {
  content: "";
  display: block;
  clear: both;
}

.detail_info {
  background-color: #fff;
}

.detail_name {
  position: relative;
  margin-bottom: 2px;
  background-color: #fff;
}

.detail_test {
  width: 100%;
}

.name_left {
  font-size: 14px;
  color: #535353;
  float: left;
  margin: 20px;
}

.detail_test::after {
  content: "";
  display: block;
  height: 40px;
  width: 2px;
  background-color: #e5e5e5;
  position: absolute;
  right: 50px;
  top: 10px;
}

.btn_right {
  text-align: center;
  float: right;
  margin: 10px auto;
  font-size: 10px;
  color: #535353;
}

.btn_right image {
  width: 20px;
  height: 20px;
  display: block;
  padding: 0 10px;
}

.detail_price {
  padding: 5px;
  display: block;
}

.price_new {
  color: red;
  font-size: 12px;
  padding-right: 10px;
}

.price_old {
  font-size: 10px;
  text-decoration: line-through;
}

.detail_server {
  background-color: #fff;
  font-size: 10px;
  padding: 10px;
  color: #676767;
}

.detail_news {
  margin: 10px 0;
  background-color: #fff;
}

.fl {
  float: left;
}

.detail_news_icon {
  width: 32px;
  height: 32px;
  padding: 10px;
}

.detail_news_icon image {
  width: 32px;
  height: 32px;
  display: block;
}

.detail_news_info {
  font-size: 12px;
  padding: 10px 10px 10px 0px;
}

.deteil_usage {
  background-color: #fff;
  padding: 10px;
  font-size: 12px;
  color: #000;
  font-weight: bold;
}

.deteil_usage view {
  padding: 5px 5px;
}

.detail_images {
  margin-top: 10px;
  background-color: #fff;
  margin-bottom: 48px;
}

.detail_images text {
  padding: 10px;
  display: block;
}

/* 底部导航 */

.detail_bottom {
  position: fixed;
  bottom: 0px;
  left: 0px;
  width: 100%;
  height: 48px;
  line-height: 48px;
  background-color: #fff;
  font-size: 12px;
}

.detail_bottom view {
  width: 25%;
  height: 48px;
  line-height: 48px;
  float: left;
  text-align: center;
  color: #fff;
}

.btn1 {
  position: relative;
}

.btn1 image {
  width: 22px;
  height: 22px;
  font-size: 0px;
  margin: 13px auto;
  position: relative;
}

.btn1 text {
  display: block;
  width: 12px;
  height: 12px;
  line-height: 12px;
  font-size: 10px;
  color: #fff;
  background-color: red;
  border-radius: 50%;
  position: absolute;
  top: 50%;
  margin-top: -12px;
  right: 50%;
  margin-right: -12px;
  text-align: center;
}

.btn2 {
  background-color: #ffa500;
}

.btn3 {
  background-color: #00aaef;
}

.btn4 {
  background-color: #69c3aa;
}

/* 底部导航 end*/
