/* pages/my/my.wxss */
.wode_header{
  padding: 10px;
  background-color: #fff;
  text-align: center;
  position: relative;
  margin: 0 auto;
  margin-bottom: 10px;
}
.wode_image{
  width: 90px;
  height: 90px;
  margin: 0 auto;
  padding-bottom: 20px;
  border-radius: 50%;
  overflow: hidden;
}
.wode_image image{
  width: 90px;
  height: 90px;
  border-radius: 50%;
 
}
.wode_header .wode_name{
    font-size: 16px;
}
.item{
  border-top: 1px solid #E5E5E5; 
  padding: 14px 10px;
  font-size: 16px;
  position: relative;
  background-color: #fff;
  border-bottom: 1px solid #E5E5E5;
}
.item image{
  width: 16px;
  height: 16px;
  position: absolute;
  bottom: 14px;
  right: 10px;
}

.getout{
  width: 100%;
  height: 45px;
  line-height: 45px;
  text-align: center;
  background-color: #fff;
  border-top: 1px solid #E5E5E5;
  border-bottom: 1px solid #E5E5E5;
  position: fixed;
  bottom: 0px;
}